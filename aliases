# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# workflow(dbcli) formally known as github_workflow
alias gw="dbcli"

alias gwg="gw github"
alias gwc="gw github commit -m \"replace me\" && git commit --amend"
alias gwfp="git push -f && gwg open"

alias gwl="gw linear"
alias gwls="gwl start -b" #... -b, --branch-name=BRANCH_NAME

# git
alias gci="git pull --rebase && rake && git push"

# heroku
alias h="heroku"

# Bundler
alias b="bundle"

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
